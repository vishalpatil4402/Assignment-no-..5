# program
class solution:
    def pow(self,x,n):
        if x==0 or x==1 or n==1:
            return x
        if x ==-1:
            if n%2==0:
                return 1
            else:
                return -1
        if n==0:
            return 1
        if n<0:
            return 1/self.pow(x,-n)
        val = self.pow(x,n//2)
        if n%2==0:
            return val*val
        return val*val*x
x = int(input("enter the value of x: "))
n = int(input("enter the value of n: "))
solution().pow(x,n)

# result
enter the value of x: 2
enter the value of n: 3
8
